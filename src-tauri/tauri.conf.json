{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Pulsar",
    "version": "0.0.49"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": {
          "allow": [
            "**",
            "$RESOURCE/*"
          ]
        }
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.pulsar.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "nebula/backends/llama_cpp/llama-cpp-sys/dist/*"
      ],
      "macOS": {
        "entitlements": "../entitlements.plist",
        "signingIdentity": "-"
      }
    },
    "security": {
      "csp": "asset:"
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": true,
        "title": "",
        "width": 1100,
        "height": 830,
        "minWidth": 1060,
        "minHeight": 740,
        "titleBarStyle": "Overlay"
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://updates.getpulsar.ai/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzOUFENEQ3NDY4MjM2MzAKUldRd05vSkcxOVNhSS9NeWlSRDlTTG8veGVPbkk4VERCc0EwWk5zTXRESU9ORjRMb1pMM2gwUTUK"
    }
  }
}